<div class="overlay"></div>
<div class="contenedor">
  <nav id="sidebar">
    <div id="dismiss"><i class="fas fa-arrow-left"></i></div>

    <div class="sidebar-header">
      <h3>FlySnk</h3>
    </div>

    <ul class="list-unstyled components">
      <li class="active">
        <%= link_to "FlySnk", root_path, class: "navbar-brand" %>
      </li>

      <li><%= link_to "Footwear", shoes_path, class: "nav-link" + current?(shoes_path) %></li>
      <li><%= link_to "Snk Release", news_index_path, class: "nav-link" + current?(news_index_path) %></li>
      <li><a href="about.html">About</a></li>
    </ul>
    <ul class="list-unstyled components login">
      <li><a href="login.html">Login</a></li>
    </ul>
  </nav>

  <nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03"
            aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <%= link_to "FlySnk", root_path, class: "navbar-brand" %>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active active">
          <%= link_to "Footwear", shoes_path, class: "nav-link" + current?(shoes_path) %>
        </li>
        <li class="nav-item active">
          <%= link_to "Snk Release", news_index_path, class: "nav-link" + current?(news_index_path) %>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="about.html">About</a>
        </li>
      </ul>

      <%= form_tag(shoes_path, method: :get, class: "form-inline my-2 my-lg-0", id: "nav-search") do %>
        <%= text_field_tag :term, params[:term], class: "form-control mr-sm-2", id: "search-input", placeholder: "Search" %>
        <%= submit_tag 'Search', name: nil, class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>


      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin-left: 10px;">
            <%= current_user.username %> <i class="fas fa-angle-down"></i>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "My Profile", edit_user_registration_path, class: "dropdown-item" %>
            <% if (current_user.id == 1) %>
              <%= link_to "Admin Stock", shoes_admin_shoe_path, class: "dropdown-item" %>
              <%= link_to "Admin News", news_admin_new_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>

    </div>
  </nav>
</div>
