<%= stylesheet_link_tag "login" %>
<%= javascript_include_tag "login_validation" %>
<%= javascript_include_tag "jquery.validate" %>
<%= javascript_include_tag "validator" %>

<%= tag.div class: 'login-wrap' do %>
  <%= tag.div class: 'login-html' do %>

    <%= radio_button_tag 'tab', nil, true, id: "tab-1", class: "sign-in" %><%= label_tag 'tab-1', 'Sign in', class: 'tab' %>
    <%= radio_button_tag 'tab', nil, nil, id: "tab-2", class: "sign-up" %><%= label_tag 'tab-2', 'Sign up', class: 'tab' %>

    <%= tag.div class: 'login-form' do %>

      <%= tag.div class: 'sign-in-htm' do %>
        <%= render "devise/sessions/login" %>
      <% end %>

      <%= tag.div class: 'sign-up-htm' do %>
        <%= render "devise/registrations/new" %>
      <% end %>

    <% end %>

  <% end %>
<% end %>