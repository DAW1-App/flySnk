<%= stylesheet_link_tag "login" %>
<%= javascript_include_tag "login_validation" %>
<%= javascript_include_tag "jquery.validate" %>
<%= javascript_include_tag "validator" %>

<%= tag.div class: 'login-wrap' do %>


  <div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign in</label>
    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign up</label>

    <div class="login-form">


      <%= tag.div class: 'sign-in-htm' do %>

        <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "needs-validation", "data-toggle": "validator", novalidate: "true"} do |f| %>

          <%= tag.div class: 'group' do %>
            <%= f.label :login, class: "label" %>
            <%= f.text_field :login, autofocus: true, autocomplete: "username", class: "input form-control", :required => true %>
            <%= tag.div class: 'invalid-tooltip' do %>I need a username
            <% end %>
          <% end %>

          <%= tag.div class: 'group' do %>
            <%= f.label :password, class: "label" %><br/>
            <%= f.password_field :password, autocomplete: "current-password", class: "input form-control", "data-type": "password", :required => true %>
            <%= tag.div class: 'invalid-tooltip' do %>And a password
            <% end %>
          <% end %>

          <%= tag.div class: 'space' %>
          <%= tag.div class: 'group' do %>
            <%= f.submit "Sign in", class: "button" %>
          <% end %>

        <% end %>

        <%= tag.div class: 'hr' %>
        <%= tag.div class: 'foot-lnk' do %>
          <%= link_to "Forgot password?", "#forgot" %>
        <% end %>
      <% end %>



      <%= tag.div class: 'sign-up-htm' do %>
        <%= render "devise/registrations/new" %>
      <% end %>


    </div>
  </div>
<% end %>


